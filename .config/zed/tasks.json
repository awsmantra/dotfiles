// Static tasks configuration.
//
// Example:
[
  {
    "label": "Run Go Program",
    "command": "go run $ZED_FILE",
    "description": "Runs the current Go file",
    "use_new_terminal": false
  },

  {
    "label": "Run Go Tidy",
    "command": "go mod tidy",
    "description": "Run go mod tidy",
    "use_new_terminal": false
  },

  {
    "label": "Run Go Test",
    "command": "go test ./...",
    "description": "Run all test cases in Go file",
    "use_new_terminal": false
  },
  {
    "label": "Run Go Test Function",
    "command": "go test -run $ZED_SYMBOL $ZED_FILE",
    "description": "Select function name and run test",
    "use_new_terminal": false
  },
  {
    "label": "Run Go Init",
    "command": "go mod init",
    "description": "Initialized go module",
    "use_new_terminal": false
  },
  {
    "label": "Run Cargo Build And Run",
    "command": "cd $ZED_CUSTOM_RUST_PACKAGE && cargo build && cargo run",
    "description": "Build and run rust program",
    "use_new_terminal": false,
    "reveal": "always"
  },
  {
    "label": "Run Cargo Test",
    "command": "cd $ZED_CUSTOM_RUST_PACKAGE && cargo test",
    "description": "Run cargo test",
    "use_new_terminal": false,
    "reveal": "always"
  },
  {
    "label": "Run Cargo Test Function",
    "command": "cd $ZED_CUSTOM_RUST_PACKAGE && cargo test $ZED_SYMBOL",
    "description": "Run cargo test function",
    "use_new_terminal": false,
    "reveal": "always"
  }
]
